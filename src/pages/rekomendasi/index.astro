---
import Layout from "../../layouts/Layout.astro";
import Section from "../../components/common/Section.astro";
import ProductCard from "../../components/ProductCard.astro";
import { GLOBAL } from "../../lib/variables";
import { PRODUCTS } from "../../lib/products";

const hero = {
  title: "Rekomendasi Produk Terpercaya",
  description:
    "Kurasi alat belajar, gear kreator, sampai gadget santai yang benar-benar kupakai dan tested. Semua link affiliate yang ada di sini sudah terverifikasi dan aman.",
  sub: "Belanja lewat link ini bantu ibedes tetap konsisten nulis konten berkualitas.",
};

const allCategories = ["Semua", ...Object.keys(PRODUCTS.reduce<Record<string, number>>((acc, product) => {
  acc[product.category] = (acc[product.category] ?? 0) + 1;
  return acc;
}, {}))];

const kitProduct = PRODUCTS.find((product) => product.slug === "markaz-hunter-shopee-kit");
const linktreePromo = PRODUCTS.find((p) => p.slug === "linktree-pro-3-bulan");
const msEduPromo = PRODUCTS.find((p) => p.slug === "microsoft-365-education");

const supportSteps = [
  {
    title: "Pilih marketplace favorit",
    copy: "Klik marketplace yang paling nyaman. Harganya sama, cuma ada referensi untuk sedikit komisi.",
  },
  {
    title: "Checkout seperti biasa",
    copy: "Proses checkout normal, bandingkan harga, atau tunggu promo — selagi dari link ini, tetap support.",
  },
  {
    title: "Share experience",
    copy: "Ceritakan kalau sudah dipakai. Feedback kamu bantu aku pilih produk berikutnya yang lebih baik.",
  },
];

const tokopediaDropSlugs = [
  "soundcore-r50i-nc",
  "mirrorspace-3-wireless-case",
  "senter-led-zoom-90000",
];
const tokopediaDrops = PRODUCTS.filter((product) => tokopediaDropSlugs.includes(product.slug));

const toAbsoluteImage = (value?: string) => {
  if (!value) return undefined;
  return value.startsWith("http") ? value : `${GLOBAL.rootUrl}/${value.replace(/^\/+/, "")}`;
};

const structuredProducts = PRODUCTS.map((product) => {
  const primaryLink = product.links?.[0];
  const schemaProduct: Record<string, unknown> = {
    "@type": "Product",
    name: product.title,
    description: product.description,
    category: product.category,
    url: `${GLOBAL.rootUrl}/rekomendasi#${product.slug}`,
  };
  const absoluteImage = toAbsoluteImage(product.image);
  if (absoluteImage) {
    schemaProduct.image = absoluteImage;
  }
  if (product.tags?.length) {
    schemaProduct.keywords = product.tags.join(", ");
  }
  if (primaryLink) {
    schemaProduct.offers = {
      "@type": "Offer",
      url: primaryLink.url,
      priceCurrency: "IDR",
      availability: "https://schema.org/InStock",
    };
  }
  return schemaProduct;
});

const productListSchema = JSON.stringify(
  {
    "@context": "https://schema.org",
    "@type": "ItemList",
    "name": `Kurasi Produk ${GLOBAL.username}`,
    "itemListElement": structuredProducts.map((product, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "url": product.url,
      "item": product,
    })),
  },
).replace(/</g, "\\u003c");
---

<Layout>
  <Fragment slot="head">
    <title>Rekomendasi Produk • {GLOBAL.username}</title>
    <meta
      name="description"
      content="Kurasi produk terpercaya dengan link affiliate Shopee dan Tokopedia. Alat belajar, gear kreator, dan gadget tested langsung oleh ibedes."
    />
    <meta property="og:title" content={`Rekomendasi Produk • ${GLOBAL.username}`} />
    <meta
      property="og:description"
      content="Kurasi produk terpercaya dengan link affiliate Shopee dan Tokopedia yang sudah tested."
    />
    <meta property="og:image" content={`${GLOBAL.rootUrl}/${GLOBAL.profileImage}`} />
    <meta property="og:url" content={`${GLOBAL.rootUrl}/rekomendasi`} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`Rekomendasi Produk • ${GLOBAL.username}`} />
    <meta
      name="twitter:description"
      content="Bantu ibedes tetap konsisten bikin konten berkualitas lewat kurasi produk terpercaya."
    />
    <meta name="twitter:image" content={`${GLOBAL.rootUrl}/${GLOBAL.profileImage}`} />
    <meta http-equiv="content-language" content="id" />
    <meta name="language" content="Indonesia" />
    <link rel="canonical" href={`${GLOBAL.rootUrl}/rekomendasi`} />
    <script type="application/ld+json" set:html={productListSchema}></script>
  </Fragment>

  <Section class="my-12 text-center space-y-6">
    <p class="text-[10px] uppercase tracking-[0.35em] zag-muted">Rekomendasi</p>
    <h1 class="font-display text-3xl sm:text-4xl">{hero.title}</h1>
    <p class="zag-muted max-w-2xl mx-auto">{hero.description}</p>
    <p class="text-xs zag-muted">{hero.sub}</p>
  </Section>

  {kitProduct && (
    <Section class="my-10">
      <div
        class="zag-bg border rounded-2xl p-6 sm:p-8 shadow-sm zag-text"
        style="border-color: color-mix(in srgb, currentColor 12%, transparent)"
      >
        <div class="flex flex-col lg:flex-row items-start gap-6">
          <div class="flex-1 space-y-4 max-w-5xl mx-auto">
            <div class="flex flex-col sm:flex-row sm:items-center gap-3">
              <span class="px-3 py-1 text-xs font-display tracking-[0.35em] uppercase rounded-full -zag-bg -zag-text">
                Kit Terbaru
              </span>
              <span class="text-sm zag-muted">{kitProduct.title}</span>
            </div>

            <p class="text-sm sm:text-base zag-muted italic">
              {kitProduct.highlight}
            </p>

            <div class="space-y-3">
              {kitProduct.links.slice(0, 3).map((link) => (
                <a
                  href={link.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="cta-button cta-button--secondary w-full justify-between gap-3"
                >
                  <div class="flex items-center gap-2">
                    {link.label.toLowerCase().includes('shopee') && (
                      <img
                        src="/shopee-logo.svg"
                        alt="Shopee"
                        class="w-5 h-5 object-contain"
                        loading="lazy"
                      />
                    )}
                    {link.label.toLowerCase().includes('tokopedia') && (
                      <img
                        src="/tokopedia-logo.svg"
                        alt="Tokopedia"
                        class="w-5 h-5 object-contain"
                        loading="lazy"
                      />
                    )}
                    {link.label.toLowerCase().includes('tiktok') && (
                      <img
                        src="/tiktok-logo.svg"
                        alt="TikTok"
                        class="w-5 h-5 object-contain"
                        loading="lazy"
                      />
                    )}
                    <span class="font-semibold text-sm tracking-[0.2em] uppercase">{link.label}</span>
                  </div>
                  <svg class="w-4 h-4 zag-muted" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                  </svg>
                </a>
              ))}
            </div>

            <a
              href={`#${kitProduct.slug}`}
              class="inline-flex items-center gap-2 zag-muted font-medium text-sm zag-transition"
            >
              <span>Lihat detail kit lengkap</span>
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </Section>
  )}

  {(linktreePromo || msEduPromo) && (
    <Section class="my-10">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg sm:text-xl font-display">Promo Spesial</h2>
        <span class="text-xs zag-muted">Waktu terbatas, cek S&amp;K</span>
      </div>
      <div class="grid gap-4 sm:gap-6 sm:grid-cols-2">
        {linktreePromo && (
          <a
            href={`#${linktreePromo.slug}`}
            class="block group rounded-2xl border zag-bg p-5 hover:shadow-md transition-colors"
            style="border-color: color-mix(in srgb, var(--color-zag-dark) 12%, transparent)"
          >
            <div class="flex items-start gap-4">
              <div
                class="shrink-0 w-10 h-10 rounded-lg"
                style="background: linear-gradient(135deg, var(--color-zag-accent-dark), var(--color-zag-accent-dark-muted))"
              ></div>
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-[0.35em] font-display" style="color: var(--color-zag-accent-dark)">
                  Linktree
                </p>
                <h3 class="font-display text-lg">{linktreePromo.title}</h3>
                {linktreePromo.highlight && <p class="text-sm zag-muted">{linktreePromo.highlight}</p>}
              </div>
            </div>
          </a>
        )}
        {msEduPromo && (
          <a
            href={`#${msEduPromo.slug}`}
            class="block group rounded-2xl border zag-bg p-5 hover:shadow-md transition-colors"
            style="border-color: color-mix(in srgb, var(--color-zag-dark) 12%, transparent)"
          >
            <div class="flex items-start gap-4">
              <div
                class="shrink-0 w-10 h-10 rounded-lg"
                style="background: linear-gradient(135deg, var(--color-zag-accent-light), var(--color-zag-accent-light-muted))"
              ></div>
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-[0.35em] font-display" style="color: var(--color-zag-accent-light)">
                  Microsoft
                </p>
                <h3 class="font-display text-lg">{msEduPromo.title}</h3>
                {msEduPromo.highlight && <p class="text-sm zag-muted">{msEduPromo.highlight}</p>}
              </div>
            </div>
          </a>
        )}
      </div>
    </Section>
  )}

  {tokopediaDrops.length > 0 && (
    <Section class="my-10">
      <div class="py-6 sm:py-8 space-y-8">
        <div class="text-center space-y-4">
          <div
            class="inline-flex items-center gap-2 px-4 py-2 rounded-full border -zag-bg -zag-text shadow-sm"
            style="border-color: color-mix(in srgb, currentColor 20%, transparent)"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" style="color: var(--color-zag-accent-dark)">
              <path d="M17 3H7c-1.1 0-2 .9-2 2v16l7-3 7 3V5c0-1.1-.9-2-2-2z"/>
            </svg>
            <span class="text-xs font-display tracking-[0.35em]">TOKOPEDIA DROP</span>
          </div>

          <h2 class="text-xl sm:text-2xl lg:text-3xl font-display">
            Rilisan Terbaru
          </h2>

          <p class="text-sm sm:text-base zag-muted max-w-2xl mx-auto">
            Produk yang baru saja di-share di social media
          </p>
        </div>

        <div>
          <div class="grid gap-4 sm:gap-6 grid-cols-1">
            {tokopediaDrops.map((product) => (
              <a
                href={`#${product.slug}`}
                class="block border rounded-xl p-6 hover:shadow-md transition-all duration-200 zag-bg"
                style="border-color: color-mix(in srgb, var(--color-zag-dark) 12%, transparent)"
              >
                <div class="flex items-start justify-between">
                  <div class="flex-1 space-y-3">
                    <div class="flex flex-wrap items-center gap-2 sm:gap-3">
                      <span
                        class="px-2 py-1 text-xs font-display rounded-full"
                        style="
                          background: color-mix(in srgb, var(--color-zag-accent-light) 30%, transparent);
                          color: var(--color-zag-accent-dark);
                        "
                      >
                        Tokopedia Drop
                      </span>
                      {product.tags?.slice(0, 2).map((tag) => (
                        <span class="text-xs zag-muted">#{tag}</span>
                      ))}
                    </div>

                    <h3 class="text-base sm:text-lg font-display">
                      {product.title}
                    </h3>

                    {product.highlight && (
                      <p class="text-xs sm:text-sm zag-muted">
                        {product.highlight}
                      </p>
                    )}
                  </div>

                  <svg class="w-4 h-4 sm:w-5 sm:h-5 zag-muted shrink-0 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
              </a>
            ))}
          </div>
        </div>
      </div>
    </Section>
  )}

  <Section id="produk-terkurasi" class="my-16 space-y-10">
    <div class="text-center space-y-4">
      <h2 class="font-display text-2xl sm:text-3xl">Semua Produk</h2>
      <p class="zag-muted text-sm">Kurasi lengkap tanpa filter — simpel dan rapi.</p>
    </div>

    <div class="filter-scroll flex flex-wrap items-center justify-center gap-2" data-category-filters>
      {allCategories.map((category, index) => (
        <button
          type="button"
          class:list={[
            "filter-chip",
            { 'is-active': index === 0 }
          ]}
          data-category-button={category.toLowerCase()}
          aria-pressed={index === 0 ? "true" : "false"}
        >
          {category}
        </button>
      ))}
    </div>

    <div class="space-y-8" data-products-container>
      {PRODUCTS.map((product) => (
        <ProductCard {...product} />
      ))}
    </div>
  </Section>

  <Section class="my-16">
    <div
      class="zag-bg border rounded-2xl p-8 sm:p-10 shadow-sm zag-text"
      style="border-color: color-mix(in srgb, currentColor 12%, transparent)"
    >
      <div class="text-center space-y-6">
        <div
          class="inline-flex items-center gap-2 px-4 py-2 rounded-full border -zag-bg -zag-text shadow-sm"
          style="border-color: color-mix(in srgb, currentColor 20%, transparent)"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" style="color: var(--color-zag-accent-dark)">
            <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 6 4 4 6.5 4c1.74 0 3.41.99 4.22 2.51C11.09 4.99 12.76 4 14.5 4 17 4 19 6 19 8.5c0 3.78-3.4 6.86-8.55 11.54z"/>
          </svg>
          <span class="text-xs font-display tracking-[0.35em]">CARA KERJA AFFILIATE</span>
        </div>

        <h3 class="text-xl sm:text-2xl lg:text-3xl font-display">
          Dukung Konten Berkualitas
        </h3>

        <p class="text-sm sm:text-base zag-muted max-w-2xl mx-auto leading-relaxed">
          Semua pembelian lewat link ini tercatat sebagai dukungan. Tidak ada biaya tambahan untukmu,
          tapi membantu aku tetap konsisten bikin konten yang berguna.
        </p>

        <div class="grid gap-4 sm:gap-6 md:grid-cols-3 mt-10">
          {supportSteps.map((step, index) => (
            <div
              class="border rounded-xl p-6 text-center space-y-4 zag-bg"
              style="border-color: color-mix(in srgb, currentColor 14%, transparent)"
            >
              <div class="inline-flex items-center justify-center w-8 h-8 rounded-lg font-semibold text-sm -zag-bg -zag-text">
                {index + 1}
              </div>
              <h4 class="font-semibold text-sm sm:text-base zag-text">
                {step.title}
              </h4>
              <p class="text-xs sm:text-sm zag-muted leading-relaxed">
                {step.copy}
              </p>
            </div>
          ))}
        </div>

        <div
          class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border shadow-sm mt-6"
          style="
            border-color: color-mix(in srgb, var(--color-zag-accent-light) 25%, transparent);
            background: color-mix(in srgb, var(--color-zag-accent-light) 18%, transparent);
            color: var(--color-zag-accent-dark);
          "
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
          </svg>
          <span class="text-xs font-display tracking-[0.3em]">
            Terima kasih sudah support!
          </span>
        </div>
      </div>
    </div>
  </Section>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const filterContainer = document.querySelector('[data-category-filters]');
    const productContainer = document.querySelector('[data-products-container]');
    if (!filterContainer || !productContainer) return;

    const allProducts = Array.from(productContainer.querySelectorAll('[data-product-card]'));

    filterContainer.addEventListener('click', (event) => {
      const target = event.target.closest('[data-category-button]');
      if (!target) return;

      const category = target.dataset.categoryButton;

      // Update button states
      filterContainer.querySelectorAll('[data-category-button]').forEach(button => {
        const isPressed = button === target;
        button.setAttribute('aria-pressed', String(isPressed));
        button.classList.toggle('is-active', isPressed);
      });

      // Filter products
      allProducts.forEach(productCard => {
        const productCategory = productCard.getAttribute('data-category');
        const shouldShow = category === 'semua' || productCategory === category;
        productCard.classList.toggle('is-hidden', !shouldShow);
      });
    });
  });
</script>
