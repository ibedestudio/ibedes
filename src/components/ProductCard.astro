---
import type { AffiliateProduct } from "../lib/products";

type Props = AffiliateProduct;

const {
  slug,
  title,
  highlight,
  description,
  image,
  imageAlt = title,
  category,
  tags = [],
  links,
} = Astro.props as Props;
const hasImage = Boolean(image);
---

<article
  id={slug}
  class="group relative w-full bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-2xl p-4 sm:p-6 lg:p-8 hover:shadow-lg hover:border-slate-300 dark:hover:border-slate-600 transition-all duration-300"
  data-product-card
  data-category={category.toLowerCase()}
  data-product-slug={slug}
>
  <div class="flex flex-col lg:flex-row lg:items-start gap-4 sm:gap-6">
    <div class="flex-1 space-y-4 sm:space-y-6">
      <div class="flex items-start justify-between gap-4">
        <div class="space-y-3 flex-1">
          <div class="flex flex-wrap items-center gap-2 sm:gap-3">
            <span class="inline-flex items-center px-2 py-1 sm:px-3 sm:py-1 text-xs font-semibold bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 rounded-full border border-slate-200 dark:border-slate-700">
              {category}
            </span>
            {tags.length > 0 && (
              <div class="flex gap-1">
                {tags.slice(0, 2).map((tag) => (
                  <span class="text-xs text-slate-500 dark:text-slate-400">#{tag}</span>
                ))}
              </div>
            )}
          </div>
          
          <h3 class="text-lg sm:text-xl lg:text-2xl font-bold text-slate-900 dark:text-white leading-tight">
            {title}
          </h3>
          
          {highlight && (
            <div class="bg-slate-50 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700 rounded-xl p-3 sm:p-4">
              <p class="text-sm font-medium text-slate-700 dark:text-slate-300 italic">
                {highlight}
              </p>
            </div>
          )}
          
          <p class="text-sm sm:text-base text-slate-600 dark:text-slate-400 leading-relaxed">
            {description}
          </p>
        </div>

        <button
          type="button"
          class="favorite-toggle flex items-center gap-1 sm:gap-2 px-2 sm:px-3 py-2 text-xs font-medium text-slate-500 dark:text-slate-400 hover:text-red-500 dark:hover:text-red-400 transition-colors shrink-0"
          data-favorite-toggle
          data-slug={slug}
          aria-pressed="false"
          aria-label={`Simpan ${title} ke daftar favorit`}
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true" class="h-3 w-3 sm:h-4 sm:w-4">
            <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 6 4 4 6.5 4c1.74 0 3.41.99 4.22 2.51C11.09 4.99 12.76 4 14.5 4 17 4 19 6 19 8.5c0 3.78-3.4 6.86-8.55 11.54z" fill="currentColor" />
          </svg>
          <span class="hidden sm:inline">Favorit</span>
        </button>
      </div>

      <div class="grid gap-3 sm:gap-4">
        {links.map((link) => (
          <div class="space-y-2">
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              class="group/link flex items-center justify-between w-full px-3 py-3 sm:px-6 sm:py-4 bg-slate-100 hover:bg-slate-200 dark:bg-slate-800 dark:hover:bg-slate-700 text-slate-800 dark:text-slate-200 rounded-xl transition-all duration-300 border border-slate-200 dark:border-slate-700 hover:border-slate-300 dark:hover:border-slate-600"
              data-affiliate-link
              data-product={slug}
              data-label={link.label}
            >
              <div class="flex items-center gap-3 sm:gap-4">
                <div class="flex items-center justify-center w-8 h-8 sm:w-10 sm:h-10 bg-slate-200 dark:bg-slate-700 rounded-lg">
                  {link.label.toLowerCase().includes('shopee') && (
                    <svg class="w-4 h-4 sm:w-5 sm:h-5 text-orange-500" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                    </svg>
                  )}
                  {link.label.toLowerCase().includes('tokopedia') && (
                    <svg class="w-4 h-4 sm:w-5 sm:h-5 text-green-500" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                  )}
                  {!link.label.toLowerCase().includes('shopee') && !link.label.toLowerCase().includes('tokopedia') && (
                    <svg class="w-4 h-4 sm:w-5 sm:h-5 text-slate-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                    </svg>
                  )}
                </div>
                <div class="text-left">
                  <div class="font-semibold text-xs sm:text-sm">{link.label}</div>
                  {link.note && (
                    <div class="text-xs opacity-70 hidden sm:block">{link.note}</div>
                  )}
                </div>
              </div>
              <svg class="w-3 h-3 sm:w-4 sm:h-4 opacity-50 group-hover/link:opacity-100 transition-opacity text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </div>
        ))}
      </div>

      <div class="pt-4 border-t border-slate-200 dark:border-slate-700">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-2 text-xs text-slate-500 dark:text-slate-400">
            <svg class="w-3 h-3 sm:w-4 sm:h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span>Verified Affiliate Link</span>
          </div>
          <div class="text-xs text-slate-400 dark:text-slate-500">
            {links.length} marketplace tersedia
          </div>
        </div>
      </div>
    </div>

    {hasImage && (
      <div class="flex-shrink-0 w-full lg:w-48 h-48 lg:h-48 rounded-xl overflow-hidden border border-slate-200 dark:border-slate-700 order-first lg:order-last">
        <img
          src={image}
          alt={imageAlt}
          loading="lazy"
          decoding="async"
          class="w-full h-full object-cover"
        />
      </div>
    )}
  </div>
</article>

<script is:inline>
  (() => {
    if (typeof window === "undefined") return;
    if (window.__ibedesAffiliateTracker) return;
    window.__ibedesAffiliateTracker = true;
    const storageKey = "ibedes_affiliate_clicks";
    const getCounts = () => {
      try {
        return JSON.parse(localStorage.getItem(storageKey) ?? "{}") ?? {};
      } catch (error) {
        console.error("Gagal membaca data klik affiliate", error);
        return {};
      }
    };
    const saveCounts = (counts) => {
      try {
        localStorage.setItem(storageKey, JSON.stringify(counts));
      } catch (error) {
        console.error("Gagal menyimpan data klik affiliate", error);
      }
    };
    const renderCounters = () => {
      const counts = getCounts();
      document.querySelectorAll("[data-affiliate-clicks]").forEach((el) => {
        const product = el.getAttribute("data-product");
        if (!product) return;
        const count = counts[product] ?? 0;
        if (count === 0) {
          el.textContent = "Link ini bersifat afiliasi â€” dukunganmu berarti.";
        } else {
          el.textContent = `Sudah ${count} klik dukungan dari perangkat ini. Terima kasih!`;
        }
      });
    };
    document.addEventListener("click", (event) => {
      const target = event.target.closest?.("[data-affiliate-link]");
      if (!target) return;
      const product = target.getAttribute("data-product");
      if (!product) return;
      const counts = getCounts();
      counts[product] = (counts[product] ?? 0) + 1;
      saveCounts(counts);
      renderCounters();
    });
    window.addEventListener("storage", (event) => {
      if (event.key === storageKey) renderCounters();
    });
    renderCounters();
  })();
</script>

<script is:inline>
  (() => {
    if (typeof window === "undefined") return;
    if (window.__ibedesFavoritesManager) return;
    window.__ibedesFavoritesManager = true;
    const storageKey = "ibedes_product_favorites";

    const parseFavorites = () => {
      try {
        const stored = JSON.parse(localStorage.getItem(storageKey) ?? "[]");
        return Array.isArray(stored) ? stored : [];
      } catch (error) {
        console.warn("Gagal membaca daftar favorit", error);
        return [];
      }
    };

    const saveFavorites = (items) => {
      try {
        localStorage.setItem(storageKey, JSON.stringify(items));
      } catch (error) {
        console.warn("Tidak bisa menyimpan favorit", error);
      }
    };

    const renderFavoriteButtons = () => {
      const favorites = new Set(parseFavorites());
      document.querySelectorAll("[data-favorite-toggle]").forEach((button) => {
        const slug = button.getAttribute("data-slug");
        if (!slug) return;
        const isActive = favorites.has(slug);
        button.dataset.active = isActive ? "true" : "false";
        button.setAttribute("aria-pressed", String(isActive));
        button.classList.toggle("is-favorite", isActive);
        const label = button.querySelector("span");
        if (label) {
          label.textContent = isActive ? "Disimpan" : "Favorit";
        }
        if (isActive) {
          button.classList.add("text-red-500", "dark:text-red-400");
        } else {
          button.classList.remove("text-red-500", "dark:text-red-400");
        }
      });
    };

    const toggleFavorite = (slug) => {
      const favorites = new Set(parseFavorites());
      if (favorites.has(slug)) {
        favorites.delete(slug);
      } else {
        favorites.add(slug);
      }
      const list = Array.from(favorites);
      saveFavorites(list);
      renderFavoriteButtons();
      window.dispatchEvent(new CustomEvent("ibedes:favorites-changed", { detail: { favorites: list } }));
    };

    document.addEventListener("click", (event) => {
      const button = event.target.closest?.("[data-favorite-toggle]");
      if (!button) return;
      const slug = button.getAttribute("data-slug");
      if (!slug) return;
      toggleFavorite(slug);
    });

    window.addEventListener("storage", (event) => {
      if (event.key === storageKey) {
        renderFavoriteButtons();
      }
    });

    renderFavoriteButtons();
    window.dispatchEvent(new CustomEvent("ibedes:favorites-changed", { detail: { favorites: parseFavorites() } }));
  })();
</script>
