---
// Notification Center Component for Astro
import { getNotifications, markAsRead, markAllAsRead, deleteNotification, clearAllNotifications } from "../lib/notifications";

interface Props {
  isOpen: boolean;
}

const { isOpen } = Astro.props;

// Get notifications on component mount/load
const notifications = isOpen ? getNotifications() : [];
---

{isOpen && (
  <div class="fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm z-50 flex items-start justify-center p-4 pt-20" data-notification-center>
    <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-700 w-full max-w-md max-h-[80vh] overflow-hidden shadow-2xl">
      <!-- Header -->
      <div class="p-6 border-b border-gray-200 dark:border-gray-700">
        <div class="flex items-center justify-between">
          <h2 class="text-xl font-bold zag-text font-display">Notifikasi</h2>
          <button
            onclick="this.closest('[data-notification-center]').style.display='none'"
            class="p-2 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-full transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        
        <!-- Quick Actions -->
        <div class="mt-4 flex gap-2">
          <button
            onclick="window.testNotification()"
            class="px-3 py-1 text-xs bg-emerald-100 dark:bg-emerald-900 text-emerald-700 dark:text-emerald-300 rounded-full hover:bg-emerald-200 dark:hover:bg-emerald-800 transition-colors"
          >
            Test Notifikasi
          </button>
          {notifications.length > 0 && (
            <button
              onclick="window.markAllAsRead()"
              class="px-3 py-1 text-xs bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300 rounded-full hover:bg-blue-200 dark:hover:bg-blue-800 transition-colors"
            >
              Tandai Semua
            </button>
          )}
        </div>
      </div>

      <!-- Notifications List -->
      <div class="overflow-y-auto max-h-96">
        {notifications.length === 0 ? (
          <div class="p-8 text-center text-gray-500 dark:text-gray-400">
            <svg class="w-12 h-12 mx-auto mb-3 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M15 17h5l-5 5h5m-7-4V9a6 6 0 1112 0v4" />
            </svg>
            <p class="text-sm">Belum ada notifikasi</p>
          </div>
        ) : (
          <div class="divide-y divide-gray-100 dark:divide-gray-800">
            {notifications.map((notification) => (
              <div
                class={`p-4 hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors ${!notification.read ? 'bg-blue-50 dark:bg-blue-900/20' : ''}`}
              >
                <div class="flex items-start gap-3">
                  <div class="flex-shrink-0 mt-1">
                    {notification.category === 'new_content' && (
                      <div class="w-2 h-2 bg-emerald-500 rounded-full"></div>
                    )}
                    {notification.category === 'engagement' && (
                      <div class="w-2 h-2 bg-yellow-500 rounded-full"></div>
                    )}
                    {notification.category === 'system' && (
                      <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                    )}
                    {notification.category === 'update' && (
                      <div class="w-2 h-2 bg-purple-500 rounded-full"></div>
                    )}
                  </div>
                  
                  <div class="flex-1 min-w-0">
                    <div class="flex items-start justify-between">
                      <h3 class="text-sm font-medium text-gray-900 dark:text-gray-100 truncate">
                        {notification.title}
                      </h3>
                      <button
                        onclick={`window.deleteNotification('${notification.id}')`}
                        class="ml-2 p-1 hover:bg-gray-200 dark:hover:bg-gray-700 rounded transition-colors"
                      >
                        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                      </button>
                    </div>
                    
                    <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                      {notification.body}
                    </p>
                    
                    <div class="flex items-center justify-between mt-2">
                      <span class="text-xs text-gray-400">
                        {new Date(notification.timestamp).toLocaleTimeString('id-ID', {
                          hour: '2-digit',
                          minute: '2-digit'
                        })}
                      </span>
                      
                      {!notification.read && (
                        <button
                          onclick={`window.markAsRead('${notification.id}')`}
                          class="text-xs text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300"
                        >
                          Tandai Dibaca
                        </button>
                      )}
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        )}
      </div>

      <!-- Footer Actions -->
      {notifications.length > 0 && (
        <div class="p-4 border-t border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800">
          <div class="flex gap-2">
            <button
              onclick="window.clearAllNotifications()"
              class="flex-1 px-3 py-2 text-xs bg-red-100 dark:bg-red-900 text-red-700 dark:text-red-300 rounded-lg hover:bg-red-200 dark:hover:bg-red-800 transition-colors"
            >
              Hapus Semua
            </button>
            <button
              onclick="this.closest('[data-notification-center]').style.display='none'"
              class="flex-1 px-3 py-2 text-xs bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors"
            >
              Tutup
            </button>
          </div>
        </div>
      )}
    </div>
  </div>
)}

  <script type="module" src={Astro.resolve('../scripts/notificationCenter.client.ts')} />