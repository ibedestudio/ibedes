---
import SEO from "../components/SEO.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Toast from "../components/common/Toast.astro";
import { GLOBAL } from "../lib/variables";
import ClickEffect from "../components/effects/ClickEffect";
import "../styles/click-effect.css";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  imageAlt?: string;
  type?: "website" | "article";
  canonicalURL?: string | URL;
  breadcrumbs?: { name: string; url: string }[];
  keywords?: string;
}

const {
  title = "Ibedes - Creative Developer",
  description = "Portfolio dan blog personal Ibedes. Berbagi cerita tentang web development, teknologi, dan pengalaman belajar.",
  image,
  imageAlt,
  type,
  canonicalURL,
  breadcrumbs,
  keywords,
} = Astro.props;
---

<!doctype html>
<html lang="id">
  <head>
    <SEO
      title={title}
      description={description}
      image={image}
      imageAlt={imageAlt}
      type={type}
      canonicalURL={canonicalURL}
      breadcrumbs={breadcrumbs}
      keywords={keywords}
    />

    <link rel="preconnect" href="https://cdnjs.cloudflare.com" crossorigin />
    <link
      rel="preload"
      as="style"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      onload="this.onload=null;this.rel='stylesheet'"
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        crossorigin="anonymous"
        referrerpolicy="no-referrer"
      />
    </noscript>

    <slot name="head" />
  </head>
  <body class="zag-bg zag-text zag-transition font-mono">
    <a href="#main-content" class="skip-link">Skip to content</a>
    <ClickEffect client:load />
    <div class="retro-marquee" aria-hidden="true">
      <div class="retro-marquee__track">
        <span
          >{GLOBAL.username} • Keep building • Stay curious • Nikmati perjalanan
          belajar •</span
        >
        <span
          >{GLOBAL.username} • Keep building • Stay curious • Nikmati perjalanan
          belajar •</span
        >
      </div>
    </div>
    <Header />
    <main id="main-content">
      <slot />
    </main>
    <Footer />

    <!-- Toast Notifications -->
    <Toast position="bottom-right" />

    <!-- Initialize Analytics & Performance Monitoring -->
    <script type="module">
      const startEngagementTracking = async () => {
        if (window.__analyticsInitialized) return;
        window.__analyticsInitialized = true;

        const [{ initScrollTracking, initTimeTracking }, { initAllPerformanceMonitoring }] =
          await Promise.all([
            import("../lib/analytics"),
            import("../lib/performance"),
          ]);

        initScrollTracking();
        initTimeTracking();
        initAllPerformanceMonitoring();

        if (import.meta.env.DEV) {
          console.log("✅ Analytics & Performance Monitoring Initialized");
        }
      };

      const warmupEngagementTracking = () => {
        const prefersReducedMotion = window.matchMedia("(prefers-reduced-motion: reduce)").matches;

        if ("requestIdleCallback" in window && !prefersReducedMotion) {
          (window as any).requestIdleCallback(startEngagementTracking, { timeout: 5000 });
        } else {
          window.setTimeout(startEngagementTracking, 2000);
        }
      };

      const initGtag = () => {
        if (window.__gtagLoaded) return;
        window.__gtagLoaded = true;

        const script = document.createElement("script");
        script.src = "https://www.googletagmanager.com/gtag/js?id=G-TQ2GF3GCCX";
        script.async = true;
        document.head.appendChild(script);

        window.dataLayer = window.dataLayer || [];
        function gtag() {
          window.dataLayer.push(arguments);
        }
        gtag("js", new Date());
        gtag("config", "G-TQ2GF3GCCX");
      };

      const attachVisibilityHandlers = () => {
        document.addEventListener("visibilitychange", () => {
          if (document.hidden) {
            if (typeof (window as any).trackEngagement === "function") {
              (window as any).trackEngagement("page_hidden", 1);
            }
          } else {
            if (typeof (window as any).trackEngagement === "function") {
              (window as any).trackEngagement("page_visible", 1);
            }
          }
        });

        window.addEventListener("error", (event) => {
          if (typeof (window as any).trackError === "function") {
            (window as any).trackError(event.error || event.message, "global_error");
          }
        });

        window.addEventListener("unhandledrejection", (event) => {
          if (typeof (window as any).trackError === "function") {
            (window as any).trackError(event.reason, "unhandled_rejection");
          }
        });
      };

      if (typeof window !== "undefined") {
        attachVisibilityHandlers();

        const startOnInteraction = () => {
          startEngagementTracking();
          initGtag();
        };

        ["pointerdown", "keydown", "touchstart"].forEach((eventName) => {
          window.addEventListener(eventName, startOnInteraction, { once: true });
        });

        window.addEventListener("load", () => {
          warmupEngagementTracking();
          window.setTimeout(initGtag, 3000);
        });
      }
    </script>
  </body>
</html>
