---
import Layout from "../../layouts/Layout.astro";
import Section from "../../components/common/Section.astro";
import { GLOBAL } from "../../lib/variables";

import tee99Full from "../../assets/swag/ibedes_99AI_back_full.png";
import tee99SideLeft from "../../assets/swag/ibedes_99AI_back_side_left.png";
import tee99SideRight from "../../assets/swag/ibedes_99AI_back_side_right.png";
import teeSoftFull from "../../assets/swag/ibedes_software_back_full.png";
import teeSoftSideLeft from "../../assets/swag/ibedes_software_back_side_left.png";
import teeSoftSideRight from "../../assets/swag/ibedes_software_back_side_right.png";


const contactPhone = GLOBAL.contactPhone ?? "";
const whatsappLink = GLOBAL.contactWhatsApp ?? "";
const phoneDigits = contactPhone.replace(/\D+/g, "");
const waNumber = phoneDigits
  ? phoneDigits.startsWith("0")
    ? `62${phoneDigits.slice(1)}`
    : phoneDigits
  : "";
const waBaseLink = waNumber ? `https://wa.me/${waNumber}` : whatsappLink || "https://wa.me/";

type ShowcaseItem = {
  src: string;
  alt: string;
  label: string;
  description: string;
};

type GalleryImage = {
  src: string;
  alt: string;
};

type SwagItem = {
  name: string;
  description: string;
  price: string;
  status: "ready" | "preorder";
  statusNote: string;
  details: string[];
  batch?: string;
  shipping?: string;
  image: string;
  imageAlt: string;
  gallery?: GalleryImage[];
};

const showcaseImages: ShowcaseItem[] = [
  {
    src: "https://images.unsplash.com/photo-1498050108023-c5249f4df085?auto=format&fit=crop&w=1400&q=80",
    alt: "Sticker retro warna-warni",
    label: "Drop 01 • Sticker Pack",
    description: "Preview ragam stiker vinyl dengan laminasi doff + UV protection."
  },
  
];

const swagItems: SwagItem[] = [
  {
    name: "99AI Circuit Tee",
    description:
      "Kaos oversized dengan grafis punggung besar bertema AI circuit. Cutting relaxed dengan bahan 24s combed adem.",
    price: "Rp249.000",
    status: "ready",
    statusNote: "Ready stok terbatas, restock tiap 3 minggu",
    batch: "Siap kirim 1-2 hari kerja dengan bonus stiker.",
    details: [
      "Bahan combed 24s, jahitan rantai di pundak",
      "Grafis belakang high-density ink + highlight neon",
      "Ukuran S-XL, chart lengkap via WhatsApp",
    ],
    shipping: "Packing polybag tebal + silica gel.",
    image: tee99Full.src,
    imageAlt: "Detail punggung 99AI Circuit Tee",
    gallery: [
      { src: tee99Full.src, alt: "Tampilan penuh grafis 99AI Circuit" },
      { src: tee99SideLeft.src, alt: "Detail sisi kiri 99AI Circuit" },
      { src: tee99SideRight.src, alt: "Detail sisi kanan 99AI Circuit" },
    ],
  },
  {
    name: "Software Glow Tee",
    description:
      "T-shirt hitam dengan tipografi retro 'software' yang menyala lembut saat gelap. Dibuat untuk temani sesi ngoding malam.",
    price: "Rp259.000",
    status: "preorder",
    statusNote: "Preorder batch #2 tutup 30 Juni",
    batch: "Produksi 7 hari, kirim 8 Juli 2025.",
    details: [
      "Sablon kombinasi puff + glow ink",
      "Label woven custom + hangtag edisi terbatas",
      "Free sticker pack + kartu ucapan",
    ],
    shipping: "Kirim dari Bandung via JNE/SiCepat (pilih saat order).",
    image: teeSoftFull.src,
    imageAlt: "Software Glow Tee tampak belakang",
    gallery: [
      { src: teeSoftFull.src, alt: "Tampilan penuh Software Glow Tee" },
      { src: teeSoftSideLeft.src, alt: "Detail sisi kiri Software Glow" },
      { src: teeSoftSideRight.src, alt: "Detail sisi kanan Software Glow" },
    ],
  },
  
];

const howToOrder = [
  "Screenshot item yang kamu mau + jumlah/ukuran.",
  "Klik tombol WhatsApp di bawah, otomatis kebuka dengan format pesan.",
  "Konfirmasi alamat, ekspedisi, dan pembayaran (Transfer / QRIS).",
  "Tunggu update nomor resi dikirim otomatis via WhatsApp.",
];

const buildOrderLink = (item: SwagItem) => {
  const message = `Halo Ibedes! Aku mau order ${item.name} (${item.price}). Stok masih ada?`;
  return `${waBaseLink}?text=${encodeURIComponent(message)}`;
};
---

<Layout>
  <Fragment slot="head">
    <title>Swag Store • {GLOBAL.username}</title>
    <meta
      name="description"
      content="Merch resmi ibedes: tee retro, notebook, dan sticker pack. Semua order lewat WhatsApp dan dikirim langsung dari Bandung."
    />
    <meta property="og:title" content="Swag Store • ibedes" />
    <meta
      property="og:description"
      content="Pamer karya sambil dukung ibedes. Pilih merch favoritmu dan order via WhatsApp."
    />
    <meta property="og:image" content={`${GLOBAL.rootUrl}/${GLOBAL.profileImage}`} />
    <meta property="og:url" content={`${GLOBAL.rootUrl}/swag`} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Swag Store • ibedes" />
    <meta
      name="twitter:description"
      content="Merch resmi ibedes. Retro Grid Tee, notebook, sticker pack, dan lainnya."
    />
    <meta name="twitter:image" content={`${GLOBAL.rootUrl}/${GLOBAL.profileImage}`} />
    <meta http-equiv="content-language" content="id" />
    <meta name="language" content="Indonesia" />
    <link rel="canonical" href={`${GLOBAL.rootUrl}/swag`} />
  </Fragment>

  <Section class="py-16 space-y-8">
    <div class="space-y-4">
      <p class="font-display text-xs uppercase tracking-[0.35em] zag-muted">
        Swag Drop
      </p>
      <h1 class="text-3xl sm:text-4xl font-display leading-tight">
        Dukung ibedes dengan merch bergaya retro.
      </h1>
      <p class="text-base sm:text-lg max-w-2xl">
        Koleksi kecil yang aku rilis bertahap. Semua produksi lokal, fokus ke kualitas bahan dan detail.
        Order sementara via WhatsApp supaya bisa ngobrol langsung soal ukuran, stok, atau kustom packaging.
      </p>
      <div class="flex flex-wrap gap-3 text-xs uppercase tracking-[0.25em]">
        <span class="px-4 py-2 border border-black/30 dark:border-white/40 rounded-full">
          Ready + Preorder
        </span>
        <span class="px-4 py-2 border border-black/30 dark:border-white/40 rounded-full">
          Kirim dari Bandung
        </span>
      </div>
    </div>
  </Section>


  <Section class="py-10 space-y-8">
    <div class="space-y-2">
      <p class="font-display text-xs uppercase tracking-[0.35em] zag-muted">
        Produk
      </p>
      <h2 class="text-2xl font-display">Display & Pricelist</h2>
    </div>
    <div class="grid gap-6 md:grid-cols-2">
      {swagItems.map((item) => {
        const gallery = item.gallery ?? [{ src: item.image, alt: item.imageAlt }];
        return (
          <article class="rounded-3xl border border-black/20 dark:border-white/30 p-6 flex flex-col gap-4">
            <div class="swag-card-gallery" data-card-gallery>
              <button
                type="button"
                class="swag-card-gallery__nav"
                data-gallery-prev
                aria-label="Foto sebelumnya"
              >
                ←
              </button>
              <div class="swag-card-gallery__viewport" data-gallery-viewport>
                <span class="swag-card-gallery__badge" data-gallery-badge aria-live="polite"></span>
                <ul class="swag-card-gallery__track" data-gallery-track>
                  {gallery.map((image) => (
                    <li class="swag-card-gallery__slide">
                      <img src={image.src} alt={image.alt} loading="lazy" />
                    </li>
                  ))}
                </ul>
              </div>
              <button
                type="button"
                class="swag-card-gallery__nav"
                data-gallery-next
                aria-label="Foto selanjutnya"
              >
                →
              </button>
              <div class="swag-card-gallery__dots" data-gallery-dots>
                {gallery.map((_, index) => (
                  <button
                    type="button"
                    class="swag-card-gallery__dot"
                    data-gallery-dot={index}
                    aria-label={`Foto ${index + 1}`}
                  ></button>
                ))}
              </div>
            </div>
          <div class="flex flex-wrap justify-between items-start gap-3">
            <div>
              <p class="font-display text-lg">{item.name}</p>
              <p class="text-sm zag-muted">{item.description}</p>
            </div>
            <span
              class:list={[
                "text-[0.6rem] uppercase tracking-[0.35em] px-3 py-1 rounded-full border",
                item.status === "ready"
                  ? "border-emerald-400 text-emerald-600 dark:text-emerald-300"
                  : "border-amber-400 text-amber-600 dark:text-amber-300",
              ]}
            >
              {item.status === "ready" ? "Ready" : "Preorder"}
            </span>
          </div>
          <p class="text-xl font-display">{item.price}</p>
          <p class="text-xs uppercase tracking-[0.35em]">{item.statusNote}</p>
          {item.batch ? <p class="text-sm zag-muted">{item.batch}</p> : null}
          <ul class="space-y-2 text-sm">
            {item.details.map((detail) => (
              <li class="flex gap-2">
                <span aria-hidden="true">+</span>
                <span>{detail}</span>
              </li>
            ))}
          </ul>
          {item.shipping ? (
            <p class="text-xs zag-muted uppercase tracking-[0.25em]">{item.shipping}</p>
          ) : null}
          <a
            href={buildOrderLink(item)}
            target="_blank"
            rel="noopener noreferrer"
            class="cta-button cta-button--primary w-full"
          >
            Order via WhatsApp
          </a>
          </article>
        );
      })}
    </div>
  </Section>

  <Section class="py-12 space-y-6">
    <div class="space-y-2">
      <p class="font-display text-xs uppercase tracking-[0.35em] zag-muted">
        Cara Order
      </p>
      <h2 class="text-2xl font-display">Quick guide</h2>
    </div>
    <div class="grid gap-4 md:grid-cols-2">
      {howToOrder.map((step, index) => (
        <div class="rounded-2xl border border-dashed border-black/20 dark:border-white/30 p-4 flex gap-3">
          <span class="font-display text-xl">{index + 1}.</span>
          <p class="text-sm leading-relaxed">{step}</p>
        </div>
      ))}
    </div>
  </Section>

  <Section class="py-12">
    <div class="rounded-3xl border border-black/20 dark:border-white/30 p-6 space-y-4 text-sm">
      <p class="font-display text-xs uppercase tracking-[0.35em] zag-muted">
        Catatan pengiriman
      </p>
      <ul class="space-y-2">
        <li>• Pembayaran via Transfer BCA / BRI atau QRIS (detail dikirim setelah konfirmasi).</li>
        <li>• Tracking resi dikirim otomatis lewat WhatsApp maksimal H+1 setelah paket di-pickup.</li>
        <li>• Bisa request kartu ucapan kalau mau dikirim sebagai hadiah.</li>
      </ul>
    </div>
  </Section>

  <script is:inline>
    (() => {
      if (typeof window === "undefined") return;
      const initShowcaseSlider = () => {
        const slider = document.querySelector("[data-showcase-slider]");
        if (!slider) return;
        const track = slider.querySelector("[data-showcase-track]");
        const slides = Array.from(track?.children ?? []);
        if (!track || slides.length <= 1) return;
        const prevBtn = slider.querySelector("[data-showcase-prev]");
        const nextBtn = slider.querySelector("[data-showcase-next]");
        const dots = Array.from(slider.querySelectorAll("[data-showcase-dot]"));
        const viewport = slider.querySelector(".swag-showcase__viewport");

        let index = 0;
        let autoPlayId;
        const AUTO_PLAY_INTERVAL = 6500;

        const normalize = (value) => {
          const total = slides.length;
          return ((value % total) + total) % total;
        };

        const render = () => {
          track.setAttribute("data-current", String(index));
          track.style.transform = `translateX(-${index * 100}%)`;
          dots.forEach((dot, dotIndex) => {
            dot.classList.toggle("swag-showcase__dot--active", dotIndex === index);
          });
        };

        const goTo = (nextIndex) => {
          index = normalize(nextIndex);
          render();
        };

        const startAutoPlay = () => {
          stopAutoPlay();
          autoPlayId = window.setInterval(() => {
            goTo(index + 1);
          }, AUTO_PLAY_INTERVAL);
        };

        const stopAutoPlay = () => {
          if (typeof autoPlayId === "number") {
            window.clearInterval(autoPlayId);
            autoPlayId = undefined;
          }
        };

        prevBtn?.addEventListener("click", () => {
          goTo(index - 1);
          startAutoPlay();
        });
        nextBtn?.addEventListener("click", () => {
          goTo(index + 1);
          startAutoPlay();
        });
        dots.forEach((dot, dotIndex) => {
          dot.addEventListener("click", () => {
            goTo(dotIndex);
            startAutoPlay();
          });
        });

        let isPointerDown = false;
        let startX = 0;

        const handlePointerDown = (event) => {
          isPointerDown = true;
          startX = event.clientX;
        };

        const handlePointerUp = (event) => {
          if (!isPointerDown) return;
          const delta = event.clientX - startX;
          if (Math.abs(delta) > 40) {
            goTo(delta < 0 ? index + 1 : index - 1);
          }
          isPointerDown = false;
        };

        viewport?.addEventListener("pointerdown", (event) => {
          stopAutoPlay();
          handlePointerDown(event);
        });
        viewport?.addEventListener("pointerup", (event) => {
          handlePointerUp(event);
          startAutoPlay();
        });
        viewport?.addEventListener("pointerleave", () => {
          isPointerDown = false;
          startAutoPlay();
        });
        window.addEventListener("pointerup", (event) => {
          handlePointerUp(event);
          startAutoPlay();
        });

        slider.addEventListener("mouseenter", stopAutoPlay);
        slider.addEventListener("mouseleave", startAutoPlay);
        slider.addEventListener("focusin", stopAutoPlay);
        slider.addEventListener("focusout", startAutoPlay);

        render();
        startAutoPlay();
      };

      const initCardGalleries = () => {
        const galleries = document.querySelectorAll("[data-card-gallery]");
        galleries.forEach((gallery) => {
          const track = gallery.querySelector("[data-gallery-track]");
          const slides = Array.from(track?.children ?? []);
          if (!track || slides.length <= 1) {
            gallery.classList.add("swag-card-gallery--static");
            return;
          }
          const prev = gallery.querySelector("[data-gallery-prev]");
          const next = gallery.querySelector("[data-gallery-next]");
          const dots = Array.from(gallery.querySelectorAll("[data-gallery-dot]"));
          const viewport = gallery.querySelector("[data-gallery-viewport]");
          const badge = gallery.querySelector("[data-gallery-badge]");
          const totalSlides = slides.length;
          let current = 0;

          const normalize = (value) => {
            const total = slides.length;
            return ((value % total) + total) % total;
          };

          const update = () => {
            const slideWidth = viewport?.getBoundingClientRect().width ?? 0;
            track.style.transform = `translate3d(-${current * slideWidth}px, 0, 0)`;
            dots.forEach((dot, dotIndex) => {
              dot.classList.toggle("swag-card-gallery__dot--active", dotIndex === current);
            });
            if (badge) {
              badge.textContent = `${String(current + 1).padStart(2, "0")} / ${String(
                totalSlides,
              ).padStart(2, "0")}`;
            }
          };

          const goTo = (nextIndex) => {
            current = normalize(nextIndex);
            update();
          };

          prev?.addEventListener("click", () => goTo(current - 1));
          next?.addEventListener("click", () => goTo(current + 1));
          dots.forEach((dot, dotIndex) => {
            dot.addEventListener("click", () => goTo(dotIndex));
          });

          let pointerDown = false;
          let startX = 0;

          const handlePointerDown = (event) => {
            pointerDown = true;
            startX = event.clientX;
          };

          const handlePointerUp = (event) => {
            if (!pointerDown) return;
            const delta = event.clientX - startX;
            if (Math.abs(delta) > 30) {
              goTo(delta < 0 ? current + 1 : current - 1);
            }
            pointerDown = false;
          };

          viewport?.addEventListener("pointerdown", handlePointerDown);
          viewport?.addEventListener("pointerup", handlePointerUp);
          viewport?.addEventListener("pointerleave", () => {
            pointerDown = false;
          });
          window.addEventListener("pointerup", handlePointerUp);
          const handleResize = () => {
            track.style.transition = "none";
            update();
            requestAnimationFrame(() => {
              track.style.transition = "transform 420ms cubic-bezier(0.25, 0.8, 0.25, 1)";
            });
          };

          window.addEventListener("resize", handleResize);

          update();
        });
      };

      initShowcaseSlider();
      initCardGalleries();
    })();
  </script>
</Layout>

<style>
  .swag-card-gallery {
    position: relative;
    width: 100%;
    border-radius: 1.75rem;
    border: 1px solid rgba(0, 0, 0, 0.18);
    overflow: hidden;
    background: radial-gradient(circle at top, rgba(255, 255, 255, 0.15), transparent);
    box-shadow: 0 15px 45px rgba(15, 23, 42, 0.15);
  }

  .swag-card-gallery__viewport {
    overflow: hidden;
    border-radius: inherit;
    position: relative;
  }

  .swag-card-gallery__track {
    display: flex;
    transition: transform 420ms cubic-bezier(0.25, 0.8, 0.25, 1);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .swag-card-gallery__slide {
    flex: 0 0 100%;
  }

  .swag-card-gallery__slide img {
    width: 100%;
    aspect-ratio: 4 / 3;
    object-fit: cover;
    display: block;
  }

  .swag-card-gallery__badge {
    position: absolute;
    top: 0.85rem;
    right: 0.85rem;
    padding: 0.2rem 0.8rem;
    border-radius: 999px;
    background: rgba(15, 23, 42, 0.75);
    color: white;
    font-size: 0.65rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
  }

  .swag-card-gallery__nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 2.4rem;
    height: 2.4rem;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.6);
    background: rgba(15, 23, 42, 0.55);
    color: #f8fafc;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    box-shadow: 0 6px 30px rgba(15, 23, 42, 0.35);
    transition: transform 120ms ease, background 120ms ease;
  }

  .swag-card-gallery__nav:hover {
    transform: translateY(-50%) scale(1.05);
    background: rgba(6, 78, 59, 0.8);
  }

  .swag-card-gallery [data-gallery-prev] {
    left: 0.75rem;
  }

  .swag-card-gallery [data-gallery-next] {
    right: 0.75rem;
  }

  .swag-card-gallery__dots {
    position: absolute;
    bottom: 0.4rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 0.4rem;
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    background: rgba(15, 23, 42, 0.4);
    backdrop-filter: blur(8px);
  }

  .swag-card-gallery__dot {
    width: 0.5rem;
    height: 0.5rem;
    border-radius: 999px;
    border: none;
    background: rgba(255, 255, 255, 0.35);
  }

  .swag-card-gallery__dot--active {
    background: #34d399;
    box-shadow: 0 0 0 4px rgba(52, 211, 153, 0.25);
  }

  .swag-card-gallery--static .swag-card-gallery__nav,
  .swag-card-gallery--static .swag-card-gallery__dots {
    display: none;
  }

  @media (max-width: 640px) {
    .swag-card-gallery__nav {
      display: none;
    }

    .swag-card-gallery__dots {
      position: static;
      transform: none;
      margin-top: 0.35rem;
      background: rgba(15, 23, 42, 0.08);
    }

    .swag-card-gallery__slide img {
      aspect-ratio: 5 / 4;
    }

    .swag-card-gallery__badge {
      font-size: 0.55rem;
      right: 0.65rem;
      top: 0.65rem;
    }
  }

  :global(.dark) .swag-card-gallery {
    border-color: rgba(255, 255, 255, 0.2);
    background: radial-gradient(circle at top, rgba(59, 130, 246, 0.15), rgba(15, 23, 42, 0.3));
  }

  :global(.dark) .swag-card-gallery__nav {
    background: rgba(15, 23, 42, 0.8);
    border-color: rgba(59, 130, 246, 0.4);
  }

  :global(.dark) .swag-card-gallery__dots {
    background: rgba(2, 6, 23, 0.6);
  }

  :global(.dark) .swag-card-gallery__dot {
    background: rgba(248, 250, 252, 0.4);
  }

  :global(.dark) .swag-card-gallery__dot--active {
    background: #22d3ee;
    box-shadow: 0 0 0 4px rgba(34, 211, 238, 0.35);
  }

  .swag-showcase {
    position: relative;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .swag-showcase__viewport {
    position: relative;
    overflow: hidden;
    border-radius: 2rem;
    border: 1px solid rgba(0, 0, 0, 0.12);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.12);
    flex: 1;
  }

  .swag-showcase__track {
    display: flex;
    transition: transform 450ms cubic-bezier(0.25, 0.8, 0.25, 1);
  }

  .swag-showcase__slide {
    min-width: 100%;
    position: relative;
  }

  .swag-showcase__slide img {
    width: 100%;
    height: clamp(220px, 45vw, 420px);
    object-fit: cover;
    display: block;
  }

  .swag-showcase__caption {
    position: absolute;
    left: 1.5rem;
    right: 1.5rem;
    bottom: 1.5rem;
    border-radius: 1.5rem;
    background: rgba(14, 15, 19, 0.8);
    color: white;
    padding: 1rem 1.2rem;
    backdrop-filter: blur(8px);
  }

  .swag-showcase__label {
    font-size: 0.8rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    margin-bottom: 0.4rem;
  }

  .swag-showcase__desc {
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .swag-showcase__nav {
    width: 2.75rem;
    height: 2.75rem;
    border-radius: 999px;
    border: 1px solid rgba(0, 0, 0, 0.2);
    background: rgba(255, 255, 255, 0.9);
    font-size: 1.3rem;
    transition: transform 150ms ease;
  }

  .swag-showcase__nav:hover {
    transform: translateY(-2px);
  }

  .swag-showcase__dots {
    position: absolute;
    left: 50%;
    bottom: 0.75rem;
    transform: translateX(-50%);
    display: flex;
    gap: 0.4rem;
  }

  .swag-showcase__dot {
    width: 0.7rem;
    height: 0.7rem;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.7);
    background: rgba(255, 255, 255, 0.4);
  }

  .swag-showcase__dot--active {
    background: #34d399;
    border-color: #34d399;
  }

  .swag-showcase__hint {
    font-size: 0.75rem;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    text-align: center;
    color: rgba(15, 23, 42, 0.6);
