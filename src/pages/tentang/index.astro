---
import { GLOBAL } from "../../lib/variables";
import Layout from "../../layouts/Layout.astro";
import Section from "../../components/common/Section.astro";
import Anchor from "../../components/common/Anchor.astro";
import Dither from "../../components/effects/Dither";
---

<Layout>
    <Fragment slot="head">
        <title>Tentang • {GLOBAL.username}</title>
        <meta
            name="description"
            content="ibedes.xyz adalah ruang kerja yang berfokus pada desain, tulisan, dan pengembangan web dengan pendekatan yang rapi, fungsional, dan mudah diakses."
        />
        <meta property="og:title" content={`Tentang • ${GLOBAL.username}`} />
        <meta
            property="og:description"
            content="ibedes.xyz adalah ruang kerja yang berfokus pada desain, tulisan, dan pengembangan web dengan pendekatan yang rapi, fungsional, dan mudah diakses."
        />
        <meta property="og:url" content={`${GLOBAL.rootUrl}/tentang`} />
        <link rel="canonical" href={`${GLOBAL.rootUrl}/tentang`} />
    </Fragment>

    <!-- Dither Background Effect -->
    <div class="relative min-h-screen overflow-hidden">
        <div class="absolute inset-0 z-0">
            <Dither
                client:load
                waveSpeed={0.03}
                waveFrequency={2.5}
                waveAmplitude={0.4}
                waveColor={[0.2, 0.6, 0.4]}
                colorNum={4}
                pixelSize={3}
                enableMouseInteraction={true}
                mouseRadius={0.8}
            />
        </div>

        <!-- Content Layer -->
        <Section class="relative z-10 my-16">
            <div class="max-w-4xl mx-auto">
                <!-- Hero Section with Photo -->
                <div class="flex flex-col items-center mb-12">
                    <div
                        class="relative mb-6 p-1 rounded-full bg-gradient-to-br from-neutral-900/20 to-neutral-900/10 dark:from-neutral-100/20 dark:to-neutral-100/10 backdrop-blur-sm"
                    >
                        <img
                            src={GLOBAL.profileImage}
                            alt={GLOBAL.username}
                            class="rounded-full w-32 h-32 md:w-40 md:h-40 object-cover grayscale ring-4 ring-neutral-900 dark:ring-neutral-100 zag-transition"
                        />
                    </div>
                    <h1
                        class="text-4xl md:text-5xl font-bold zag-text zag-transition text-center"
                    >
                        Tentang
                    </h1>
                </div>

                <!-- Content Grid with Backdrop -->
                <div
                    class="grid grid-cols-1 md:grid-cols-2 gap-12 p-8 rounded-2xl bg-neutral-100/80 dark:bg-neutral-900/80 backdrop-blur-md border border-neutral-900/10 dark:border-neutral-100/10"
                >
                    <!-- Deskripsi -->
                    <div class="space-y-6">
                        <div class="space-y-4">
                            <p
                                class="zag-text zag-transition text-base leading-relaxed"
                            >
                                ibedes.xyz adalah ruang kerja yang berfokus pada
                                desain, tulisan, dan pengembangan web. Setiap
                                konten dan proyek di dalamnya disusun dengan
                                pendekatan yang rapi, fungsional, dan mudah
                                diakses. Situs ini menjadi tempat untuk
                                mendokumentasikan proses, membangun ide, dan
                                mengembangkan eksperimen digital secara bertahap
                                dan terarah.
                            </p>
                            <p
                                class="zag-text zag-transition text-base leading-relaxed"
                            >
                                Identitas visual dan struktur kontennya dijaga
                                tetap sederhana agar pengalaman pengguna lebih
                                nyaman dan konsisten.
                            </p>
                            <p
                                class="zag-text zag-transition text-base leading-relaxed"
                            >
                                Untuk komunikasi profesional atau kerja sama,
                                silakan gunakan kontak yang tersedia.
                            </p>
                        </div>
                    </div>

                    <!-- Kontak -->
                    <div class="space-y-6">
                        <h2 class="text-2xl font-bold zag-text zag-transition">
                            Kontak
                        </h2>

                        <div class="space-y-5">
                            <!-- Email -->
                            <div class="flex items-start gap-4">
                                <i
                                    class="fa-solid fa-envelope text-xl zag-text zag-transition mt-1"
                                ></i>
                                <div class="flex-1">
                                    <p
                                        class="text-sm zag-muted zag-transition mb-1.5"
                                    >
                                        Email
                                    </p>
                                    <Anchor
                                        url="mailto:ibedestudio@gmail.com"
                                        class="text-base zag-text zag-transition"
                                    >
                                        ibedestudio@gmail.com
                                    </Anchor>
                                </div>
                            </div>

                            <!-- Telepon -->
                            <div class="flex items-start gap-4">
                                <i
                                    class="fa-solid fa-phone text-xl zag-text zag-transition mt-1"
                                ></i>
                                <div class="flex-1">
                                    <p
                                        class="text-sm zag-muted zag-transition mb-1.5"
                                    >
                                        Telepon
                                    </p>
                                    <Anchor
                                        url="tel:+6282317777008"
                                        class="text-base zag-text zag-transition"
                                    >
                                        0823-1777-7008
                                    </Anchor>
                                </div>
                            </div>

                            <!-- Lokasi -->
                            <div class="flex items-start gap-4">
                                <i
                                    class="fa-solid fa-location-dot text-xl zag-text zag-transition mt-1"
                                ></i>
                                <div class="flex-1">
                                    <p
                                        class="text-sm zag-muted zag-transition mb-1.5"
                                    >
                                        Lokasi
                                    </p>
                                    <p
                                        class="text-base zag-text zag-transition"
                                    >
                                        Bandung, Indonesia
                                    </p>
                                </div>
                            </div>

                            <!-- LinkedIn -->
                            <div class="flex items-start gap-4">
                                <i
                                    class="fa-brands fa-linkedin text-xl zag-text zag-transition mt-1"
                                ></i>
                                <div class="flex-1">
                                    <p
                                        class="text-sm zag-muted zag-transition mb-1.5"
                                    >
                                        LinkedIn
                                    </p>
                                    <Anchor
                                        url="https://www.linkedin.com/in/bella-mujia/"
                                        class="text-base zag-text zag-transition"
                                    >
                                        bella-mujia
                                    </Anchor>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </Section>
    </div>
</Layout>
