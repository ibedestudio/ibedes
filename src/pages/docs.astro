---
import Layout from "../layouts/Layout.astro";
import Breadcrumb from "../components/common/Breadcrumb.astro";
import { GLOBAL } from "../lib/variables";

const breadcrumbItems = [
    { name: "Home", url: "/" },
    { name: "Documentation", url: "/docs" },
];

const docSections = [
    {
        title: "Getting Started",
        icon: "fa-solid fa-flag-checkered",
        items: [
            {
                title: "Introduction",
                description:
                    "Overview of the ibedes project structure and goals.",
                link: "#",
            },
            {
                title: "Installation",
                description: "How to set up the project locally.",
                link: "#",
            },
            {
                title: "Project Structure",
                description: "Understanding the file organization.",
                link: "#",
            },
        ],
    },
    {
        title: "Core Concepts",
        icon: "fa-solid fa-atom",
        items: [
            {
                title: "Design System",
                description: "Colors, typography, and core UI principles.",
                link: "/design-system",
                badge: "New",
            },
            {
                title: "Routing",
                description: "How pages and navigation work.",
                link: "#",
            },
            {
                title: "Data Fetching",
                description: "Handling API requests and content loading.",
                link: "#",
            },
        ],
    },
    {
        title: "Features",
        icon: "fa-solid fa-wand-magic-sparkles",
        items: [
            {
                title: "Blog System",
                description:
                    "Markdown-based blogging with categories and tags.",
                link: "/blog",
            },
            {
                title: "Projects Portfolio",
                description: "Showcasing work and case studies.",
                link: "/projects",
            },
            {
                title: "Dark Mode",
                description: "Built-in theme switching capability.",
                link: "#",
            },
        ],
    },
    {
        title: "Reference",
        icon: "fa-solid fa-book-bookmark",
        items: [
            {
                title: "Changelog",
                description: "History of changes and updates.",
                link: "/changelog",
            },
            {
                title: "API Reference",
                description: "Backend API endpoints and usage.",
                link: "#",
            },
        ],
    },
];
---

<Layout
    title="Documentation | ibedes"
    description="Comprehensive documentation for the ibedes platform."
>
    <div class="container mx-auto px-4 py-12 space-y-12">
        <!-- Header Section -->
        <div class="space-y-6 max-w-4xl">
            <Breadcrumb items={breadcrumbItems} />

            <div class="space-y-4">
                <h1
                    class="text-2xl sm:text-3xl md:text-5xl font-display uppercase tracking-wider break-words"
                >
                    Documentation
                </h1>
                <p
                    class="text-xl text-muted-foreground font-serif leading-relaxed max-w-2xl"
                >
                    Everything you need to know about building and maintaining
                    the ibedes platform. Guides, references, and design
                    patterns.
                </p>
            </div>
        </div>

        <!-- Search / Quick Actions (Placeholder) -->
        <div
            class="p-6 rounded-2xl border-2 border-dashed border-border bg-muted/30 flex flex-col sm:flex-row items-center justify-between gap-4"
        >
            <div class="flex items-center gap-3 text-muted-foreground">
                <i class="fa-solid fa-magnifying-glass"></i>
                <span class="font-mono text-sm"
                    >Search documentation... (Coming Soon)</span
                >
            </div>
            <div class="flex gap-2">
                <a
                    href="https://github.com/ibedestudio/ibedes"
                    target="_blank"
                    class="cta-button cta-button--secondary text-xs py-2 px-4"
                >
                    <i class="fa-brands fa-github mr-2"></i> GitHub
                </a>
            </div>
        </div>

        <!-- Documentation Grid -->
        <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
            {
                docSections.map((section) => (
                    <section class="space-y-6">
                        <div class="flex items-center gap-3 pb-2 border-b border-border">
                            <div class="w-10 h-10 rounded-lg bg-muted flex items-center justify-center">
                                <i class={`${section.icon} text-xl`} />
                            </div>
                            <h2 class="text-2xl font-display">
                                {section.title}
                            </h2>
                        </div>

                        <div class="grid gap-4">
                            {section.items.map((item) => (
                                <a
                                    href={item.link}
                                    class="group block p-5 rounded-xl border border-border bg-card hover:border-primary/50 hover:shadow-md transition-all duration-200"
                                >
                                    <div class="flex justify-between items-start mb-2">
                                        <h3 class="font-bold font-serif text-lg group-hover:text-primary transition-colors">
                                            {item.title}
                                        </h3>
                                        {item.badge && (
                                            <span class="px-2 py-0.5 text-[10px] font-mono uppercase tracking-wider bg-primary text-primary-foreground rounded-full">
                                                {item.badge}
                                            </span>
                                        )}
                                    </div>
                                    <p class="text-sm text-muted-foreground leading-relaxed">
                                        {item.description}
                                    </p>
                                </a>
                            ))}
                        </div>
                    </section>
                ))
            }
        </div>

        <!-- Help / Support -->
        <section
            class="mt-16 pt-12 border-t border-border text-center space-y-6"
        >
            <h2 class="text-2xl font-display">Need more help?</h2>
            <p class="text-muted-foreground">
                Can't find what you're looking for? Reach out to the team.
            </p>
            <div class="flex justify-center gap-4">
                <a
                    href={GLOBAL.contactWhatsApp}
                    target="_blank"
                    class="cta-button cta-button--primary"
                >
                    Contact Support
                </a>
            </div>
        </section>
    </div>
</Layout>
