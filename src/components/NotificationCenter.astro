---
import { addNotification, clearAllNotifications, deleteNotification, getNotifications, markAllAsRead, markAsRead } from "../lib/notifications";

interface Props {
  isOpen?: boolean;
}

const { isOpen = false } = Astro.props;
---

<div
  class={`fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm z-50 flex items-start justify-center p-4 pt-20 ${isOpen ? '' : 'hidden'}`}
  data-notification-center
  aria-hidden={!isOpen}
>
  <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-700 w-full max-w-md max-h-[80vh] overflow-hidden shadow-2xl">
    <!-- Header -->
    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-bold zag-text font-display">Notifikasi</h2>
        <button
          type="button"
          data-notification-close
          class="p-2 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-full transition-colors"
          aria-label="Tutup panel notifikasi"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <!-- Quick Actions -->
      <div class="mt-4 flex gap-2">
        <button
          type="button"
          data-notification-test
          class="px-3 py-1 text-xs bg-emerald-100 dark:bg-emerald-900 text-emerald-700 dark:text-emerald-300 rounded-full hover:bg-emerald-200 dark:hover:bg-emerald-800 transition-colors"
        >
          Test Notifikasi
        </button>
        <button
          type="button"
          data-notification-mark-all
          class="px-3 py-1 text-xs bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300 rounded-full hover:bg-blue-200 dark:hover:bg-blue-800 transition-colors hidden"
        >
          Tandai Semua
        </button>
      </div>
    </div>

    <!-- Notifications List -->
    <div class="overflow-y-auto max-h-96" data-notification-container>
      <div class="p-8 text-center text-gray-500 dark:text-gray-400" data-notification-empty>
        <svg class="w-12 h-12 mx-auto mb-3 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M15 17h5l-5 5h5m-7-4V9a6 6 0 1112 0v4" />
        </svg>
        <p class="text-sm">Belum ada notifikasi</p>
      </div>
    </div>

    <!-- Footer Actions -->
    <div class="p-4 border-t border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 hidden" data-notification-footer>
      <div class="flex gap-2">
        <button
          type="button"
          data-notification-clear
          class="flex-1 px-3 py-2 text-xs bg-red-100 dark:bg-red-900 text-red-700 dark:text-red-300 rounded-lg hover:bg-red-200 dark:hover:bg-red-800 transition-colors"
        >
          Hapus Semua
        </button>
        <button
          type="button"
          data-notification-close
          class="flex-1 px-3 py-2 text-xs bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors"
        >
          Tutup
        </button>
      </div>
    </div>
  </div>
</div>

<script type="module">
  import { addNotification, clearAllNotifications, deleteNotification, getNotifications, markAllAsRead, markAsRead } from '../lib/notifications';

  const overlay = document.querySelector('[data-notification-center]');
  const container = overlay?.querySelector('[data-notification-container]');
  const footer = overlay?.querySelector('[data-notification-footer]');
  const markAllButton = overlay?.querySelector('[data-notification-mark-all]');
  const testButton = overlay?.querySelector('[data-notification-test]');
  const clearButton = overlay?.querySelector('[data-notification-clear]');
  const closeButtons = Array.from(overlay?.querySelectorAll('[data-notification-close]') ?? []);
  const toggleButtons = Array.from(document.querySelectorAll('[data-notification-toggle]'));
  const indicator = document.querySelector('[data-notification-indicator]');
  const countBadge = document.querySelector('[data-notification-count]');

  const buildEmptyState = () => {
    const wrapper = document.createElement('div');
    wrapper.className = 'p-8 text-center text-gray-500 dark:text-gray-400';
    wrapper.innerHTML = `
      <svg class="w-12 h-12 mx-auto mb-3 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M15 17h5l-5 5h5m-7-4V9a6 6 0 1112 0v4" />
      </svg>
      <p class="text-sm">Belum ada notifikasi</p>
    `;
    return wrapper;
  };

  const updateBadge = (unreadCount) => {
    if (!indicator || !countBadge) return;
    const display = unreadCount > 9 ? '9+' : String(unreadCount);
    countBadge.textContent = display;
    indicator.classList.toggle('hidden', unreadCount === 0);
  };

  const renderNotifications = () => {
    if (!container) return;

    const notifications = getNotifications();
    const unreadCount = notifications.filter((n) => !n.read).length;
    updateBadge(unreadCount);

    container.replaceChildren();

    if (!notifications.length) {
      container.appendChild(buildEmptyState());
      footer?.classList.add('hidden');
      markAllButton?.classList.add('hidden');
      return;
    }

    const list = document.createElement('div');
    list.className = 'divide-y divide-gray-100 dark:divide-gray-800';

    notifications.forEach((notification) => {
      const item = document.createElement('div');
      item.className = `p-4 hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors ${!notification.read ? 'bg-blue-50 dark:bg-blue-900/20' : ''}`;

      const row = document.createElement('div');
      row.className = 'flex items-start gap-3';
      item.appendChild(row);

      const marker = document.createElement('div');
      marker.className = 'flex-shrink-0 mt-1';
      const dot = document.createElement('div');
      dot.className = 'w-2 h-2 rounded-full';
      const colorMap = {
        new_content: 'bg-emerald-500',
        engagement: 'bg-yellow-500',
        system: 'bg-blue-500',
        update: 'bg-purple-500'
      };
      dot.classList.add(colorMap[notification.category] ?? 'bg-gray-400');
      marker.appendChild(dot);
      row.appendChild(marker);

      const content = document.createElement('div');
      content.className = 'flex-1 min-w-0';
      row.appendChild(content);

      const titleBar = document.createElement('div');
      titleBar.className = 'flex items-start justify-between';
      content.appendChild(titleBar);

      const title = document.createElement('h3');
      title.className = 'text-sm font-medium text-gray-900 dark:text-gray-100 truncate';
      title.textContent = notification.title;
      titleBar.appendChild(title);

      const deleteButton = document.createElement('button');
      deleteButton.type = 'button';
      deleteButton.className = 'ml-2 p-1 hover:bg-gray-200 dark:hover:bg-gray-700 rounded transition-colors';
      deleteButton.innerHTML = `<svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>`;
      deleteButton.addEventListener('click', () => {
        deleteNotification(notification.id);
        renderNotifications();
      });
      titleBar.appendChild(deleteButton);

      const body = document.createElement('p');
      body.className = 'text-sm text-gray-600 dark:text-gray-400 mt-1';
      body.textContent = notification.body;
      content.appendChild(body);

      const metaRow = document.createElement('div');
      metaRow.className = 'flex items-center justify-between mt-2';
      content.appendChild(metaRow);

      const time = document.createElement('span');
      time.className = 'text-xs text-gray-400';
      time.textContent = new Date(notification.timestamp).toLocaleTimeString('id-ID', {
        hour: '2-digit',
        minute: '2-digit'
      });
      metaRow.appendChild(time);

      if (!notification.read) {
        const markReadButton = document.createElement('button');
        markReadButton.type = 'button';
        markReadButton.className = 'text-xs text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300';
        markReadButton.textContent = 'Tandai Dibaca';
        markReadButton.addEventListener('click', () => {
          markAsRead(notification.id);
          renderNotifications();
        });
        metaRow.appendChild(markReadButton);
      }

      list.appendChild(item);
    });

    container.appendChild(list);
    footer?.classList.remove('hidden');
    if (markAllButton) {
      markAllButton.classList.toggle('hidden', notifications.length === 0);
    }
  };

  const openCenter = () => {
    if (!overlay) return;
    overlay.classList.remove('hidden');
    overlay.setAttribute('aria-hidden', 'false');
    renderNotifications();
  };

  const closeCenter = () => {
    if (!overlay) return;
    overlay.classList.add('hidden');
    overlay.setAttribute('aria-hidden', 'true');
  };

  toggleButtons.forEach((button) => {
    button.addEventListener('click', (event) => {
      event.preventDefault();
      if (overlay?.classList.contains('hidden')) {
        openCenter();
      } else {
        closeCenter();
      }
    });
  });

  closeButtons.forEach((button) => {
    button.addEventListener('click', (event) => {
      event.preventDefault();
      closeCenter();
    });
  });

  overlay?.addEventListener('click', (event) => {
    if (event.target === overlay) {
      closeCenter();
    }
  });

  document.addEventListener('keydown', (event) => {
    if (event.key === 'Escape' && overlay && !overlay.classList.contains('hidden')) {
      closeCenter();
    }
  });

  testButton?.addEventListener('click', () => {
    addNotification({
      title: 'Contoh Notifikasi',
      body: 'Ini hanyalah pesan percobaan untuk mengetes alur notifikasi.',
      category: 'system',
      tag: 'test',
      data: { source: 'notification-center' }
    });
  });

  clearButton?.addEventListener('click', () => {
    clearAllNotifications();
    renderNotifications();
  });

  markAllButton?.addEventListener('click', () => {
    markAllAsRead();
    renderNotifications();
  });

  window.addEventListener('notificationsUpdated', renderNotifications);

  renderNotifications();
</script>
