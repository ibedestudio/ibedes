---
import type { AffiliateProduct } from "../../lib/products";
import Anchor from "../common/Anchor.astro";

interface Props {
  products: AffiliateProduct[];
}

const { products = [] } = Astro.props;

// Pilih produk spesifik yang pasti punya gambar valid dari Unsplash
const highlightSlugs = [
  "linktree-pro-3-bulan",
  "microsoft-365-education",
  "markaz-hunter-shopee-kit",
  "soundcore-r50i-nc",
];

const normalized = products
  .filter(p => highlightSlugs.includes(p.slug))
  .sort((a, b) => highlightSlugs.indexOf(a.slug) - highlightSlugs.indexOf(b.slug));
---

<div class="flex justify-between items-center w-full">
  <h3 class="font-display text-lg sm:text-xl leading-loose">Rekomendasi Pilihan</h3>
  <Anchor url="/rekomendasi" class="text-base">Lihat Semua</Anchor>
</div>

<div class="mt-8 grid grid-cols-1 sm:grid-cols-2 gap-4 md:gap-6" data-affiliate-grid>
  {
    normalized.map((product) => (
      <a
        href={`/rekomendasi#${product.slug}`}
        class="group/card block bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-800 rounded-xl transition-all duration-300 hover:border-slate-300 dark:hover:border-slate-700 hover:shadow-lg"
        aria-label={`Lihat ${product.title}`}
      >
        <div class="flex flex-col h-full">
          {product.image && (
            <div class="relative h-40 rounded-t-xl overflow-hidden border-b border-slate-200 dark:border-slate-800">
              <img
                src={product.image}
                alt={product.imageAlt || product.title}
                decoding="async"
                class="w-full h-full object-cover transition-transform duration-300 group-hover/card:scale-105"
              />
            </div>
          )}
          <div class="flex-grow p-4 sm:p-5 flex flex-col">
            <div class="flex-grow">
              <div class="text-[10px] uppercase tracking-[0.3em] font-semibold text-slate-500 dark:text-slate-400 mb-1">
                {product.category}
              </div>
              <h4 class="font-bold text-slate-900 dark:text-slate-100 text-sm sm:text-base leading-tight">
                {product.title}
              </h4>
            </div>
            <div class="mt-3 text-xs font-semibold text-emerald-600 dark:text-emerald-400 flex items-center gap-1">
              <span>Lihat Detail</span>
              <svg class="w-3 h-3 transition-transform duration-200 group-hover/card:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </div>
          </div>
        </div>
      </a>
    ))
  }
</div>
