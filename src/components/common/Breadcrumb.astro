---
// Breadcrumb navigation component for better SEO and UX
import type { BreadcrumbItem } from "../../lib/seo";
import { generateBreadcrumbSchema } from "../../lib/seo";
import { GLOBAL } from "../../lib/variables";

export interface Props {
    items: BreadcrumbItem[];
    className?: string;
}

const { items, className } = Astro.props;
const schema = generateBreadcrumbSchema(items, GLOBAL.rootUrl);
---

<nav aria-label="Breadcrumb" class:list={["mb-6", className]}>
    <ol class="flex flex-wrap items-center gap-2 text-sm m-0 p-0 list-none">
        {
            items.map((item, index) => (
                <li class="flex items-center gap-2">
                    {index < items.length - 1 ? (
                        <>
                            <a
                                href={item.url}
                                class="text-gray-500 dark:text-gray-400 hover:text-emerald-600 dark:hover:text-emerald-400 hover:underline transition-colors"
                            >
                                {item.name}
                            </a>
                            <i
                                class="fa-solid fa-chevron-right text-[10px] text-gray-400 dark:text-gray-600"
                                aria-hidden="true"
                            />
                        </>
                    ) : (
                        <span
                            class="font-medium text-gray-900 dark:text-white"
                            aria-current="page"
                        >
                            {item.name}
                        </span>
                    )}
                </li>
            ))
        }
    </ol>
</nav>

<!-- Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify(schema)} />
