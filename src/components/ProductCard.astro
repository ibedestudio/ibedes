---
import type { AffiliateProduct } from "../lib/products";

type Props = AffiliateProduct;

const {
  slug,
  title,
  highlight,
  description,
  image,
  imageAlt = title,
  category,
  priceRange,
  endorsement,
  tags = [],
  links,
} = Astro.props as Props;
const hasImage = Boolean(image);
---

<article
  id={slug}
  class="group/card grid grid-cols-1 md:grid-cols-3 gap-6 sm:gap-8 p-4 bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-800 rounded-2xl transition-shadow duration-300 hover:shadow-lg"
  data-product-card
  data-category={category.toLowerCase()}
  data-product-slug={slug}
>
  {hasImage && (
    <div class="relative h-48 md:h-full rounded-xl overflow-hidden border border-slate-200 dark:border-slate-700">
      <img
        src={image}
        alt={imageAlt}
        loading="lazy"
        decoding="async"
        class="w-full h-full object-cover transition-transform duration-300 group-hover/card:scale-105"
      />
      {priceRange && (
        <div class="absolute top-3 right-3 px-2.5 py-1 bg-white/80 dark:bg-slate-900/80 backdrop-blur-sm rounded-full text-xs font-semibold text-slate-800 dark:text-slate-200 border border-slate-200 dark:border-slate-700">
          {priceRange}
        </div>
      )}
    </div>
  )}

  <div class="md:col-span-2 flex flex-col">
    <div class="flex-grow space-y-4">
      <div class="flex items-start justify-between gap-4">
        <div class="flex-1 space-y-2">
          <span class="text-[10px] uppercase tracking-[0.3em] font-semibold text-slate-500 dark:text-slate-400">
            {category}
          </span>
          <h3 class="text-lg sm:text-xl font-bold text-slate-900 dark:text-white leading-tight">
            {title}
          </h3>
        </div>
        <button
          type="button"
          class="favorite-toggle flex-shrink-0 p-2 rounded-full hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
          data-favorite-toggle
          data-slug={slug}
          aria-pressed="false"
          aria-label={`Simpan ${title} ke daftar favorit`}
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true" class="h-5 w-5 text-slate-400 dark:text-slate-500 transition-colors">
            <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 6 4 4 6.5 4c1.74 0 3.41.99 4.22 2.51C11.09 4.99 12.76 4 14.5 4 17 4 19 6 19 8.5c0 3.78-3.4 6.86-8.55 11.54z" fill="currentColor" />
          </svg>
        </button>
      </div>

      {endorsement && (
        <div class="border-l-4 border-emerald-400 dark:border-emerald-600 pl-4 py-2 bg-slate-50 dark:bg-slate-800/50 rounded-r-lg">
          <p class="text-sm font-medium text-slate-700 dark:text-slate-300 italic">"{endorsement}"</p>
        </div>
      )}

      {highlight && (
        <div class="bg-slate-50 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700 rounded-xl p-3 sm:p-4">
          <p class="text-sm font-medium text-slate-700 dark:text-slate-300 italic">
            {highlight}
          </p>
        </div>
      )}

      <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">
        {description}
      </p>
    </div>

    <div class="mt-6 pt-6 border-t border-slate-200 dark:border-slate-800">
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
        {links.map((link) => (
          <a
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            class="group/link flex items-center justify-center gap-3 px-4 py-3 bg-slate-100 hover:bg-slate-200 dark:bg-slate-800 dark:hover:bg-slate-700 text-slate-800 dark:text-slate-200 rounded-xl transition-all duration-200 border border-slate-200 dark:border-slate-700 hover:border-slate-300 dark:hover:border-slate-600"
            data-affiliate-link
            data-product={slug}
            data-label={link.label}
          >
            <span class="font-semibold text-sm">{link.label}</span>
            <svg class="w-4 h-4 opacity-50 group-hover/link:opacity-100 group-hover/link:translate-x-1 transition-transform text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        ))}
      </div>
    </div>
  </div>
</article>

<style>
  [data-favorite-toggle][aria-pressed="true"] svg {
    color: #ef4444; /* text-red-500 */
  }
</style>

<script is:inline>
  (() => {
    if (typeof window === "undefined") return;
    if (window.__ibedesAffiliateTracker) return;
    window.__ibedesAffiliateTracker = true;
    const storageKey = "ibedes_affiliate_clicks";
    const getCounts = () => {
      try {
        return JSON.parse(localStorage.getItem(storageKey) ?? "{}") ?? {};
      } catch (error) {
        console.warn("Gagal membaca data klik affiliate", error);
        return {};
      }
    };
    const saveCounts = (counts) => {
      try {
        localStorage.setItem(storageKey, JSON.stringify(counts));
      } catch (error) {
        console.warn("Gagal menyimpan data klik affiliate", error);
      }
    };
    document.addEventListener("click", (event) => {
      const target = event.target.closest?.("[data-affiliate-link]");
      if (!target) return;
      const product = target.getAttribute("data-product");
      if (!product) return;
      const counts = getCounts();
      counts[product] = (counts[product] ?? 0) + 1;
      saveCounts(counts);
    });
  })();
</script>

<script is:inline>
  (() => {
    if (typeof window === "undefined") return;
    if (window.__ibedesFavoritesManager) return;
    window.__ibedesFavoritesManager = true;
    const storageKey = "ibedes_product_favorites";

    const parseFavorites = () => {
      try {
        const stored = JSON.parse(localStorage.getItem(storageKey) ?? "[]");
        return Array.isArray(stored) ? stored : [];
      } catch (error) {
        console.warn("G-agal membaca daftar favorit", error);
        return [];
      }
    };

    const saveFavorites = (items) => {
      try {
        localStorage.setItem(storageKey, JSON.stringify(items));
      } catch (error) {
        console.warn("Tidak bisa menyimpan favorit", error);
      }
    };

    const renderFavoriteButtons = () => {
      const favorites = new Set(parseFavorites());
      document.querySelectorAll("[data-favorite-toggle]").forEach((button) => {
        const slug = button.getAttribute("data-slug");
        if (!slug) return;
        const isActive = favorites.has(slug);
        button.setAttribute("aria-pressed", String(isActive));
      });
    };

    const toggleFavorite = (slug) => {
      const favorites = new Set(parseFavorites());
      if (favorites.has(slug)) {
        favorites.delete(slug);
      } else {
        favorites.add(slug);
      }
      const list = Array.from(favorites);
      saveFavorites(list);
      renderFavoriteButtons();
      window.dispatchEvent(new CustomEvent("ibedes:favorites-changed", { detail: { favorites: list } }));
    };

    document.addEventListener("click", (event) => {
      const button = event.target.closest?.("[data-favorite-toggle]");
      if (!button) return;
      const slug = button.getAttribute("data-slug");
      if (!slug) return;
      toggleFavorite(slug);
    });

    window.addEventListener("storage", (event) => {
      if (event.key === storageKey) renderFavoriteButtons();
    });

    renderFavoriteButtons();
    window.dispatchEvent(new CustomEvent("ibedes:favorites-changed", { detail: { favorites: parseFavorites() } }));
  })();
</script>
